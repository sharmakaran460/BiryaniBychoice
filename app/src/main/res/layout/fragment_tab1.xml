<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.recyclerview.widget.RecyclerView
        android:paddingBottom="60dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Tab1"
        android:id="@+id/layout">


    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cart_green_color"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="60dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">




        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:weightSum="5">

                <TextView
                    android:id="@+id/items_total"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:textColor="#1B1A1A"
                    android:textSize="14dp"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"/>


                <View
                    android:background="#000"
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:textColor="#1B1A1A"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="35dp">


                    <TextView
                        android:id="@+id/cart_amout"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#1B1A1A"
                        android:textSize="14dp"

                        android:layout_width="wrap_content"
                        android:layout_height="35dp"/>

                </LinearLayout>



                <LinearLayout

                    android:orientation="horizontal"
                    android:textColor="#1B1A1A"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="35dp">

                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:textColor="#1B1A1A"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="35dp">


                    <TextView
                        android:fontFamily="@font/railway_regular"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#1B1A1A"
                        android:textSize="14dp"
                        android:text="VIEW CART"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"/>


                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_shopping_cart_black_24dp"
                        android:layout_width="25dp"
                        android:layout_height="18dp">

                    </ImageView>

                </LinearLayout>



            </LinearLayout>


            <TextView
                android:fontFamily="@font/raleway_bold"
                android:gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#1B1A1A"
                android:textSize="10dp"
                android:text="From: Biryani by choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>