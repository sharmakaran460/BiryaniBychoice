<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_Profile"
    android:background=" #ecf0f1">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profiletoolbar"
        style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/toolbarColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/firstlinear"
        android:layout_marginTop="2sp"
        android:layout_below="@+id/profiletoolbar">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:padding="50sp"
                android:id="@+id/prodilepic"
                android:background="@drawable/books"/>

            <Button
                android:layout_width="50sp"
                android:layout_height="30sp"
                android:text="Edit"
                android:id="@+id/editProfile"
                android:textSize="10sp"
                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:padding="10sp"
                android:id="@+id/customername"
                android:fontFamily="@font/raleway_bold"
                android:textSize="24sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="end"/>
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/btn_myOrders"
               android:textColor="@android:color/white"
               android:fontFamily="@font/raleway_bold"
               android:background="@drawable/mordersprofilebtn"
               android:text="My Orders" android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/firstlinear"
        android:layout_marginTop="20sp"
        android:layout_margin="10sp">

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Review"
                android:id="@+id/Reviews"
                android:layout_weight="1"
                android:padding="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:layout_weight="1"
                android:id="@+id/photos"
                android:padding="20sp"
                android:background="@drawable/otplayout"/>

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Heres the review"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

</RelativeLayout>