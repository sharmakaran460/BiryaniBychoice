<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/my_orders_card"
    android:padding="4sp"
    android:background="@drawable/loginbackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="5sp"
            android:padding="2sp"

          >
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/ic_order"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/my_oder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:text="My Order Title"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_orders_items"
                android:textSize="10sp"
                android:text="Number of Items Ordered"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_oder_price"
                android:textSize="15sp"
                android:text="Rs 200"
                android:textColor="#156F00"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7sp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repeat_order_btn"
                android:textSize="12sp"
                android:padding="5sp"
                android:layout_alignParentRight="true"
                android:text="Repeat Order"
                android:textAllCaps="false"
                android:background="@drawable/loginbackground"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>