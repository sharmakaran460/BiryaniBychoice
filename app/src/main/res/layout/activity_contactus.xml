<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contactus"
    android:background="@drawable/carddd">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contactToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="Contact Us"
        app:titleTextColor="@color/colorPrimary"
        android:background="@color/colorPrimaryDark"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/logo_about_us"
            android:src="@drawable/finallogo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: live@nsys.in"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="10sp"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mob: 011-43108331"
            android:drawableLeft="@drawable/ic_contact"
            android:drawablePadding="10sp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textColor="#000000"
            android:drawableLeft="@drawable/ic_notebook"
            android:drawablePadding="10sp"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-198, Ground Floor"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="italic"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lajpat nagar-1, New Delhi"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"/>


    </LinearLayout>
</RelativeLayout>