<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8sp"
    android:layout_marginTop="10sp">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Recipe  name"
            android:textSize="24sp"
            android:fontFamily="@font/raleway_bold"
            android:layout_gravity="center"
            android:layout_weight="0.70"
            android:textColor="#f44336"
            android:textColorHint="#f44336"
            android:textAlignment="center"
            android:id="@+id/cart_name"
            android:padding="2sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:layout_height="150sp"
                android:layout_width="150sp"
                android:id="@+id/cart_img"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Quantity"
                   android:layout_gravity="center"
                   android:textSize="20sp"
                   android:fontFamily="@font/raleway_bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnminus"
                        android:layout_gravity="center"
                        android:background="@drawable/minusripple"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/otplayout"
                        android:padding="10sp"
                        android:inputType="number"
                        android:id="@+id/cart_quantity"
                        android:textSize="25sp"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnplus"
                        android:layout_gravity="center"
                        android:background="@drawable/plusripple"/>

                </LinearLayout>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:gravity="center"
                    android:hint="1000"
                    android:layout_weight="1"
                    android:id="@+id/cart_price"
                    android:drawableEnd="@drawable/rupeeindian"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


</RelativeLayout>